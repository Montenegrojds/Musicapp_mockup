        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="lutti"
            android:id="@+id/autorCancion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="one"
            android:id="@+id/nombreCancion"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>